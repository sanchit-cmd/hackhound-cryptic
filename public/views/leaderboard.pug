extends base

block content
  .leaderboard-container
    .leaderboard-box
      h1.leaderboard-title Cryptic Hunt Leaderboard
      .leaderboard-wrapper
        table.leaderboard-table
          thead
            tr
              th.rank-header Position
              th.name-header Player Name
              th.level-header Current Level
          tbody#leaderboardBody
            each user, index in users
              tr(class=user._id === currentUser ? 'current-user' : '')
                td.rank-cell
                  if index < 3
                    span(class=`trophy trophy-${index + 1}`)
                      case index
                        when 0
                          | ðŸ¥‡
                        when 1
                          | ðŸ¥ˆ
                        when 2
                          | ðŸ¥‰
                  span.rank #{index + 1}
                td.name-cell= user.name || user.username
                td.level-cell Level #{user.level}